<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="icons/css/all.min.css">
    <link rel="stylesheet" href="icons/css/brands.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="stylesheets/modal.css">
    <link rel="stylesheet" href="stylesheets/detail.css">
    <link rel="stylesheet" href="stylesheets/setting.css">
    <title>User Profile</title>
</head>
<body>
    <!-- navigation -->

    <div id="modal-container">
        <div class="modal-background">
            <div class="modal">
                <!-- alert -->
                <button class="close-btn">&#10005;</button>

                <p class="result">Result: </p>

                <!-- update form -->
                <form action="/" method="PATCH" id="updateForm">
                    <input type="text" id="username" name="username" placeholder="username" value="<%= user.username %> ">
                    <input type="text" id="firstname" name="firstname" placeholder="First Name" value="<%= user.firstname %> ">
                    <input type="text" id="lastname" name="lastname" placeholder="Last Name" value="<%= user.lastname %> ">
                    <input type="text" id="nationalNumber" name="nationalNumber" placeholder="National Number" value="<%= user.nationalNumber %> ">
                    <select name="gender" id="gender">
                        <option value="none">None</option>
                        <option value="male" selected>Male</option>
                        <option value="female">Female</option>
                    </select>

                    <button type="submit">update</button>
                </form>
            </div>
        </div>
    </div>


     <div class="content">
         <div class="dCard">
             <div class="dCard-picture"></div>
             <div class="dCard-content">
                 <div class="dCard-title">
                     <h2><%= user.firstname %> <%= user.lastname %> Profile</h2>
                 </div>

                 <div class="dCrad-description">
                     <h3>Description</h3>
                     <p>
                         <span><%= user.firstname %></span>
                         <span><%= user.lastname %></span>
                         with
                         <span><%= user.nationalNumber %></span>
                         national number and
                         <span><%= user.gender %> </span>.
                     </p>
                 </div>

                 <div class="dCard-feature">
                     <h3>Specifications</h3>

                     <ul>
                         <li>
                             <p class="fd">Username</p>
                             <p><%= user.username %></p>
                         </li>
                         <li>
                             <p class="fd">Gender</p>
                             <p><%= user.gender %></p>
                         </li>
                         <li>
                             <p class="fd">National Number</p>
                             <p><%= user.nationalNumber %></p>
                         </li>
                         <li>
                             <p class="fd">ŸêCreated at</p>
                             <p><%= user.createFormat %></p>
                         </li>
                     </ul>
                 </div>
             </div>
             <div class="controll">
                 <form action="/authentication/logout" method="GET">
                     <button class="setButton" type="submit">Logout</button>
                 </form>

                 <button id="two" class="button setButton">Update Profile</button>

                 <form action="/user/delete">
                     <button class="setButton red">Delete Account</button>
                 </form>
             </div>
         </div>
     </div>

    <!-- scripts -->
    <script src="javascripts/jquery-3.5.1.min.js"></script>
    <script src="javascripts/modal.js"></script>
    <script src="javascripts/update.js"></script>
    <script src="javascripts/main.js"></script>
</body>
</html>